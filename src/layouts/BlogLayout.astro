---
import Layout from './Layout.astro';

interface Props {
  title?: string;
  description?: string;
  menuItems?: Array<{
    label: string;
    url: string;
    active?: boolean;
  }>;
  blogTitle?: string;
}

const { 
  title = 'Mi Blog', 
  description = '... a minimalistic theme focused on readability.',
  menuItems = [
    { label: 'Home', url: '/', active: true },
    { label: 'Features', url: '/features' },
    { label: 'Portfolio', url: '/portfolio' },
    { label: 'About Me', url: '/about' },
    { label: 'Contact', url: '/contact' }
  ],
  blogTitle = 'Read'
} = Astro.props;
---

<Layout title={title} description={description}>
  <header class="site-header">
    <h1 class="site-title">{blogTitle}</h1>
    <p class="site-description">{description}</p>
    
    <nav class="main-navigation">
      {menuItems.map(item => (
        <a href={item.url} class={item.active ? 'active' : ''}>
          {item.label}
        </a>
      ))}
      <a href="/search">Search â†’</a>
    </nav>
  </header>
  
  <main class="main-content">
    <slot />
  </main>
  
  <footer class="site-footer">
    <p> {new Date().getFullYear()} Mi Blog. Todos los derechos reservados.</p>
  </footer>
</Layout>

<style>
  nav a {
    margin-right: 1rem;
  }
</style>