  }
  
  .content img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 2rem 0;
  }
  
  .content blockquote {
    border-left: 4px solid #0066cc;
    padding-left: 1rem;
    margin-left: 0;
    color: #555;
    font-style: italic;
  }
  
  .author-bio {
    margin-top: 3rem;
    padding: 1.5rem;
    background-color: #f8f9fa;
    border-radius: 8px;
  }
  
  .author-info {
    display: flex;
    gap: 1rem;
    align-items: center;
  }
  
  .author-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
    
