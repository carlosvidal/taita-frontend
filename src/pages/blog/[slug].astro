---
import BlogLayout from '../../layouts/BlogLayout.astro';
import { getTenantInfo, fetchTenantData } from '../../utils/tenant.js';

export const prerender = false;

// Get tenant information from request
const tenantInfo = getTenantInfo(Astro.request);
const { slug } = Astro.params;

// Fetch data using tenant information
let post = null;
let menuItems = [];
let settings = {};
let comments = [];

try {
  // Fetch post, menu, settings in parallel
  const [postData, menuData, settingsData] = await Promise.all([
    fetchTenantData(`/posts/public/slug/${slug}`, tenantInfo),
    fetchTenantData('/menu/public', tenantInfo),
    fetchTenantData('/settings/public', tenantInfo)
  ]);
  
  console.log('Respuesta del post:', postData);
  console.log('Respuesta del menú:', menuData);
  console.log('Respuesta de configuración:', settingsData);
  
  // Process post data - it might come as an array with one item
  if (postData) {
    post = Array.isArray(postData) && postData.length > 0 
      ? postData[0] 
      : postData;
  }
  
  // Process menu data
  if (menuData && Array.isArray(menuData)) {
    menuItems = menuData.map(item => ({
      label: item.label,
      url: item.url,
      active: item.url === `/blog/${slug}`
    }));
  }
  
  // Process settings
  if (settingsData) {
    settings = settingsData;
  }
} catch (error) {
  console.error('Error al obtener datos:', error);
}

// Handle 404 - post not found
if (!post) {
  return Astro.redirect('/404');
}

// Helper function to format dates
function formatDate(dateString) {
  if (!dateString) return '';
  const date = new Date(dateString);
  return date.toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

const formattedDate = formatDate(post.publishedAt);
---

<BlogLayout 
  title={post.title} 
  description={post.excerpt || post.content.substring(0, 155)}
  menuItems={menuItems}
  settings={settings}
>
  <article class="post">
    <header class="post-header">
      <h1>{post.title}</h1>
      <div class="post-meta">
        <time datetime={post.publishedAt}>{formattedDate}</time>
        {post.category && (
          <span class="category">
            <a href={`/category/${post.category.slug}`}>{post.category.name}</a>
          </span>
        )}
      </div>
    </header>
    
    {post.image && (
      <div class="featured-image">
        <img src={`${import.meta.env.PUBLIC_IMAGE_BASE_URL}/${post.image}`} alt={post.title} />
      </div>
    )}
    
    <div class="content" set:html={post.content} />
    
    {post.author && (
      <div class="author-bio">
        <h3>Sobre el autor</h3>
        <div class="author-info">
          {post.author.picture && (
            <img src={`${import.meta.env.PUBLIC_IMAGE_BASE_URL}/${post.author.picture}`} alt={post.author.name} class="author-avatar" />
          )}
          <div>
            <h4>{post.author.name}</h4>
            {post.author.bio && <p>{post.author.bio}</p>}
          </div>
        </div>
      </div>
    )}
  </article>
</BlogLayout>

<style>
