    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .post-header {
    margin-bottom: 2rem;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  
  .post-meta {
    display: flex;
    gap: 1rem;
    color: #666;
    font-size: 0.9rem;
  }
  
  .category a {
    color: #0066cc;
    text-decoration: none;
  }
  
  .category a:hover {
    text-decoration: underline;
  }
  
  .featured-image {
    margin: 2rem 0;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .content {
    line-height: 1.7;
    font-size: 1.1rem;
  }
  
  .content h2 {
    font-size: 1.8rem;
    margin: 2rem 0 1rem;
  }
  
  .content h3 {
    font-size: 1.5rem;
    margin: 1.8rem 0 0.8rem;
  }
  
